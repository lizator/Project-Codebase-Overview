<Page
    x:Class="Project_Codebase_Overview.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_Codebase_Overview"
    xmlns:localOwner="using:Project_Codebase_Overview.ContributorManagement.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Author list item view template-->
    <Page.Resources>
        <!-- template for list item-->
        <DataTemplate x:Key="OwnerListTemplate" x:DataType="localOwner:Author">
            <Grid ColumnDefinitions="auto, *">
                <Ellipse Grid.Column="0">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="{x:Bind Color}"/>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Grid.Column="1" Text="{x:Bind Name}"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <Grid ColumnDefinitions="*, 16">
        <!-- SettingsPanel -->
        <Grid Grid.Column="0" ColumnDefinitions="*, 135" x:Name="SettingsPanelGrid" Padding="10" >
            
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            
            <!-- owner title + manage  (row 0)  -->
            <TextBlock  Grid.Row="0" Grid.Column="0" Text="Teams" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
            <Button Grid.Row="0" Grid.Column="1"  Click="UpdateOwnerList"  VerticalAlignment="Center" HorizontalAlignment="Right">Manage</Button>
            
            <!-- author list -->
            <ListView Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="2"
                    ItemsSource="{x:Bind OwnersList}"
                      BorderThickness="1" BorderBrush="DarkGray" Background="White">
                <ListView.ItemTemplate>
                    <!-- TODO: FIX TEMPLATE SHIT!-->
                    <DataTemplate x:DataType="localOwner:Author">
                        <Grid ColumnDefinitions="auto, *" VerticalAlignment="Center">
                            <Ellipse Grid.Column="0"  Width="20" Height="20" VerticalAlignment="Center" Stroke="Black" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="{x:Bind Color}"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Grid.Column="1" Text="{x:Bind Name}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Explorer Settings -->
            <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"  Style="{StaticResource TitleTextBlockStyle}" Text="Explorer"  VerticalAlignment="Center"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Data selection"  VerticalAlignment="Center" />
            <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{x:Bind DataSelectionOptions}" SelectedIndex="0"  VerticalAlignment="Center" HorizontalAlignment="Right"/> <!-- diplaymemberpath and selectedmemberpath when objectified!-->

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Line decay"  VerticalAlignment="Center"/>
            <CheckBox Grid.Row="4" Grid.Column="1" x:Name="DecayCheckBox"  VerticalAlignment="Center"  Width="100"
                    Checked="DecayChecked" Unchecked="DecayUnchecked"/>
            
                <!-- Visibility dependent-->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Decay timer" x:Name="DecayTimerTextBlock" Visibility="Visible" Margin="20,0,0,0"  VerticalAlignment="Center"/>
                <Grid Grid.Row="5" Grid.Column="1" ColumnDefinitions="auto, auto" Visibility="Visible"  VerticalAlignment="Center" HorizontalAlignment="Right">
                    <NumberBox Grid.Column="0" x:Name="DecayTimerNumberBox" ValueChanged="DecayTimerNumberChanged" Width="35"  VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="DecayTimerComboBox" SelectionChanged="DecayTimerSelectionChanged" Width="100"  VerticalAlignment="Center" SelectedIndex="0">
                        <x:String>Days</x:String>
                        <x:String>Weeks</x:String>
                        <x:String>Months</x:String>
                        <x:String>Years</x:String>
                    </ComboBox>
                </Grid>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Drop off percentage" x:Name="DropOffTextBlock" Visibility="Visible" Margin="20,0,0,0"  VerticalAlignment="Center"/>
                <Grid x:Name="DropOffNumberBox" Grid.Row="6" Grid.Column="1"  ColumnDefinitions="*, auto"  VerticalAlignment="Center" HorizontalAlignment="Right">
                    <NumberBox  Grid.Column="0" ValueChanged="DecayDropOffChanged"  Visibility="Visible" Width="35" HorizontalAlignment="Right"  VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="%" Margin="5,0,0,0"  VerticalAlignment="Center"></TextBlock>
                </Grid>

            <TextBlock Grid.Row="7" Grid.Column="0" Text="Show files"  VerticalAlignment="Center"/>
            <CheckBox Grid.Row="7" Grid.Column="1"  x:Name="ShowFilesCheckBox" Content="Enabled" IsChecked="True" Width="100"
                      Checked="ShowFilesChecked" Unchecked="ShowFilesUnchecked"  VerticalAlignment="Center" />
            
            <!-- Import/Export -->
            <TextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Text="Import/Export" Style="{StaticResource TitleTextBlockStyle}" />
            <Button Grid.Row="9" Grid.Column="0">Export CodeOwners file</Button>
            <Button Grid.Row="10" Grid.Column="0">Save</Button>
            <Button Grid.Row="11" Grid.Column="0">Load</Button>
            <Button Grid.Row="12" Grid.Column="0">Open new repository</Button>
            
        </Grid>
        
        <!-- ExpanderLine -->
        <Grid Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderThickness="1,0,1,0" BorderBrush="Black"
              ColumnDefinitions="*" RowDefinitions="*,*,*" PointerPressed="ExpanderClick"  Background="LightGray">

            <Image Source="Assets/Settings.png" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="16" Margin="0,10,0,0"/>
            <TextBlock Text="&lt;" Grid.Row="0" Grid.Column="0" x:Name="ExpanderText1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="&lt;" Grid.Row="1" Grid.Column="0" x:Name="ExpanderText2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="&lt;" Grid.Row="2" Grid.Column="0" x:Name="ExpanderText3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            


        </Grid>





       
    </Grid>
</Page>
